<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<h2 class="product-headline head-line title_h2 text-center">検索結果一覧&nbsp;&nbsp;
  	  <span>全(<%= @datas.count %>件)</span>
		</h2>

		<table class="table table-bordered genre-table">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, search_search_path('search[value]': genre.id, 'search[how]': "match") %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>

  <div class="clearfix product-box">
  	 <% if @datas.empty? %>
	  <h2>該当する商品はありません</h2>
	<% end %>
  <% @datas.each do |data| %>
   <%= link_to customers_product_path(data.id) do %>
	      <div>
	        <%= attachment_image_tag(data, :products_image, size: "180x130", fallback: "no_image.jpg") %>
	      </div>
	      <p><%= data.name %></p>
	    <% end %>

	    <% if data.sale_status == true %>
	      <p>¥<%= data.non_taxed_price.to_s(:delimited) %></p>
	    <% elsif data.sale_status == false %>
	      <p>売り切れ中</p>
    <% end %>
   <% end %>
  </div>
