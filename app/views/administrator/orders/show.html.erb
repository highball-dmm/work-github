<table>
  <tr>
    <td>購入者</td>
    <td>
      <%= link_to customer_customer_path(@customer) do %>
        <%= @order.name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>配送先</td>
    <td><%= @order.shipping_address %></td>
  </tr>
