<h3>注文履歴一覧</h3>

<table>
  <tr>
    <thead>
      <tr>
        <td>購入日時</td>
        <td>購入者</td>
        <td>注文個数</td>
        <td>注文ステータス</td>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to administrator_order_path(order) do %>
            <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <% end %>
        </td>
        <td><%= order.customer %></td>
        <td><%= order.cart_items.count %></td>
        <td><%= order.order_status %></td>
      </tr>
    <% end %>
    </tbody>
  </tr>
</table>
