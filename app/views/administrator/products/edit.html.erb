<br>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3>商品編集</h3>
  </div>
</div>
<%= form_for(@product, url:administrator_product_path(@product)) do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
  			<%= attachment_image_tag @product, :products_image, src: "", size: "300x250", id: "preview", fallback: "no_image.jpg" %>
      <div class="field">
        <%= f.attachment_field :products_image, placeholder: "商品画像", style: "padding: 15px;", onchange: "expressFile()" %>
      </div>
    </div>
    <div class="col-md-5">
      <div class="field row control-rabel-bottom">
        <%= f.label :name, "商品名", class:"control-label-1" %>
        <%= f.text_field :name, class:'control-form' %>
      </div>
      <div class="field row control-rabel-bottom">
        <%= f.label :products_explanation, "商品説明", class:"control-label" %>
        <%= f.text_area :products_explanation, class:'control-form' %>
      </div>
      <div class="field row control-rabel-bottom">
        <%= f.label :genre_id, "ジャンル", class:"control-label" %>
        <%= f.collection_select(:genre_id, @genres, :id, :name) %>
      </div>
      <div class="field row control-rabel-bottom">
        <%= f.label :non_taxed_price, "税抜価格", class:"control-label" %>
        <%= f.text_field :non_taxed_price, class:'control-form' %>
      </div>
      <div class="field row control-rabel-bottom">
        <%= f.label :sales_status, "販売ステータス", class:"control-label-2" %>
        <%= f.select :sale_status, [["販売中", "販売中"], ["売り切れ", "売り切れ"]], class:"control-label" %>
      </div>
      <br>
      <div class="actions row n-btn">
        <%= f.submit '変更を保存', class:'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>