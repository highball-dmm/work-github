<br>
<h4><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h4>
<br>
<div class="row">
    <div class="col-xs-8">
      <div class="field">
        <p>
          顧客ID　　　　　<%= @customer.id %>
          <% if @customer.user_status == true %>
            <span>　<i class="fas fa-bullseye blue"></i>退会済
          <% elsif @customer.user_status == false %>
            　<i class="fas fa-bullseye red"></i>有効会員</span>
          <% end %>
        </p>
      </div>
      <div class="field">
        <p>
          氏名　　　　　　<%= @customer.first_name %>  <%= @customer.last_name %>
        </p>
      </div>
      <div class="field">
        <p>
          フリガナ　　　　<%= @customer.first_name_kana %>  <%= @customer.last_name_kana %>
        </p>
      </div>
      <div class="field">
        <p>
          郵便番号　　　　<%= @customer.postcode %>
        </p>
      </div>
      <div class="field">
        <p>
          住所　　　　　　<%= @customer.address %>
        </p>
      </div>
      <div class="field">
        <p>
          電話番号　　　　<%= @customer.phone_number %>
        </p>
      </div>
      <div class="field">
        <p>
          メールアドレス　<%= @customer.email%>
        </p>
      </div>
      <div class="actions">
        <%= link_to "編集する",edit_administrator_customer_path(@customer), class: "glyphicon glyphicon-pencil btn btn-success edit_shipping_addres_#{@customer.id}" %>
        <%= link_to " 注文履歴一覧を見る", administrator_orders_path(@customer), class: "glyphicon glyphicon-folder-open btn btn-info" %>
      </div>
    </div>
  </div>