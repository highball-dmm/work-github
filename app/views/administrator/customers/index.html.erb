<h3>会員一覧</h3>

<table>
  <thead>
    <tr>
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to administrator_customer_path(customer) do %>
          <%= customer.first_name %><%= customer.last_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td>
      <% if customer.is_active == true %>
        <p>退会済み</p>
      <% else %>
        <p>有効</p>
      <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>