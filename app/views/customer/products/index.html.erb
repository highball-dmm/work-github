<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<h2 class="product-headline head-line title_h2 text-center">商品一覧
  	  <span>全(<%= @products.count %>件)</span>
		</h2>

		<table class="table table-bordered genre-table">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, search_search_path('search[value]': genre.id, 'search[how]': "match") %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>

  <div class="clearfix product-box">
  	 <% @products.each do |product| %>
  	  <%= render "products_each", product: product %>
  	 <% end %>
  </div>


