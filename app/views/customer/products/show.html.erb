<div class="row">
  <div class="col-md-3">
		<table class="table table-bordered genre-table">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, search_search_path('search[value]': genre.id, 'search[how]': "match") %>
        </td>
      </tr>
    <% end %>
    </tbody>
    </table>
  </div>

  <div class="col-md-9 col-xs-offset-2 product-show">
    <div class="product-image">
    <%= attachment_image_tag(@product, :products_image, size: "340x220", fallback: "no_image.jpg" ) %>
    </div>
    <div class="product-description">
      <div class="field product-name">
        <h2><%= @product.name %></h2>
      </div>
      <div class="field">
        <%= @product.products_explanation %>
      </div>
      <div class="field product-price">
        <h3>¥<%= @product.non_taxed_price.to_s(:delimited) %>
          <span class="tax">(税抜)</span>
        </h3>
      </div>

    <div class="field">

          <%= form_with :model => @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
            <%= f.hidden_field :product_id, value: @product.id %>
            <%= f.select :item_quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
            <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
          <% end %>

    </div>
 </div>
</div>


