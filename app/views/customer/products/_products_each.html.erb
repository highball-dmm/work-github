  <div class="product-container text-center">
      <%= link_to customers_product_path(product.id), class: "btn-link", :style=>"color:#0099FF;" do %>
      <div id="img_field" class="product">
        <%= attachment_image_tag(product, :products_image, size: "180x130", fallback: "no_image.jpg") %>
      </div>
      <div class="product-name">
        <%= product.name %>
      </div>
      <% end %>

    <% if product.sale_status == true %>
      <p>¥<%= product.non_taxed_price.to_s(:delimited) %></p>
    <% elsif product.sale_status == false %>
      <p>売り切れ中</p>
    <% end %>
  </div>
