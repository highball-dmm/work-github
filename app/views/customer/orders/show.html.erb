<h2>注文履歴詳細</h2>
  <% if @order.present? %>
    	<strong>注文情報</strong>
  	    <table>
          <tbody>
              <tr>
                <th>注文日</th>
          	     <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
              <tr>
              　<th>配送先</th>
                <td><%= @order.postcode %><br>
                	  <%= @order.address %><br>
                	  <%= @order.name %>
                </td>
              </tr>
              <tr>
              　<th>支払方法</th>
                <td><%= @order.payment_method %></td>
              </tr>
              <tr>
                <th>ステータス</th>
                <td><%= @order.order_status %></td>
              </tr>
          </tbody>
        </table>


    <strong>請求情報</strong>
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= total_price(@order_details).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>ご請求金額</th>
          <td><%= @order.total_price.to_s(:delimited) %>円</td>
        </tr>
      </table>


    <strong>注文内容</strong>
      <table>
        <thead>
  	       <tr>
  	      	<th>商品</th>
  	        <th>単価(税抜)</th>
  	      	<th>個数</th>
  	      	<th>小計</th>
  	        </tr>
        </thead>
        <tbody>
        	<% @order_details.each do |order_detail| %>
            <tr>
  	        <td><%= order_detail.product.name %></td>
  	        <td><%= tax_price(order_detail.product.non_taxed_price).to_s(:delimited) %>円</td>
  	        <td><%= order_detail.item_quantity %></td>
  	        <td><%= sub_price(order_detail).to_s(:delimited) %>円</td>
            </tr>
          <% end %>
        </tbody>
        </table>
    <% if customer_signed_in? %>
      <%= link_to "注文履歴一覧へ戻る", customers_orders_path %>
    <% else %>
      <%= link_to "会員詳細へ戻る", admin_customer_path %>
    <% end %>
  <% else %>
    <p>注文履歴がありません。</p>
  <% end %>
