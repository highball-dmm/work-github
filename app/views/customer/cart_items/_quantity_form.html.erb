<td class="text-left">
  <%= attachment_image_tag( cart_item.product, :products_image, size: "55x43", fallback: "no_image.jpg") %>
  <%= cart_item.product.name %>
</td>
<td class="text-right">
  ¥<%= tax_price(cart_item.product.non_taxed_price).to_s(:delimited) %>
</td>
<td>
  <%= form_for(cart_item, url: cart_item_path(cart_item), method: :patch , local: true)do |f| %>
  <%# form_with model: @cart_item, url: cart_item_path(cart_item), id: 'cart_item', id: 'item_quantity', class: 'cart_item', , method: :patch , local: true do |f| %>
    <%= f.number_field :item_quantity, class: "quantity", size: 10, min: 1, id: "quantity_cart" %>
    <%= f.submit "変更", class: "btn btn-info" %>
  <% end %>
</td>
<td class="text-right" id='sub_price-<%= cart_item.id %>'>
  ¥<%= sub_price(cart_item).to_s(:delimited) %>
</td>
<td>
  <%= link_to " 削除する", cart_item_path(cart_item), method: :delete, local: true, data: {confirm: "#{cart_item.product.name}を削除してよろしいですか？"}, class: "glyphicon glyphicon-trash btn btn-danger" %>
</td>