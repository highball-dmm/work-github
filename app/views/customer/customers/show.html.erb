
<h1>Customers#show</h1>

			<table class="table table-bordered table-condensed" >
				<tbody>
					<tr>
						<td class="info col-xs-2">名前 (姓)</td>
						<td class="text-left"><%= @customer.first_name %></td>
					</tr>
					<tr>
						<td class="info">名前 (名)</td>
						<td class="text-left"><%= @customer.last_name %></td>
					</tr>
					<tr>
						<td class="info">フリガナ (姓)</td>
						<td class="text-left"><%= @customer.first_name_kana %></td>
					</tr>
					<tr>
						<td class="info">フリガナ (名)</td>
						<td class="text-left"><%= @customer.last_name_kana %></td>
					</tr>
					<tr>
						<td class="info">郵便番号</td>
						<td class="text-left"><%= @customer.postcode %></td>
					</tr>
					<tr>
						<td class="info">住所</td>
						<td class="text-left"><%= @customer.address %></td>
					</tr>
					<tr>
						<td class="info">電話番号</td>
						<td class="text-left"><%= @customer.phone_number %></td>
					</tr>
					<tr>
						<td class="info">メールアドレス</td>
						<td class="text-left"><%= @customer.email %></td>
					</tr>
				</tbody>
			</table>

  <% if @customer == current_customer %>
    <p><%= link_to "プロフィール編集", edit_customer_path(@customer) %></p>
  <% end %>

  <% if customer_signed_in? && @customer.id == current_customer.id %>
        <%= link_to "退会", customers_hide_path(current_customer), method: :put, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger" %>
  <% end %>