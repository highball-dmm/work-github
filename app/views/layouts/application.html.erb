<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="wrapper" class="d-flex flex-column vh-100">
   <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light">


        <% if administrator_signed_in? %>
          <h1 class="navbar-brand p-3">
            <%= link_to "Nagano CAKE", administrator_customer_top_path, class: "fas fa-birthday-cake" %>
          </h1>
        	<%= render 'layouts/header.admin' %>
        <% else %>
          <h1 class="navbar-brand">
           <%= link_to "Nagano Cake", root_path, class: "fas fa-birthday-cake" %>
          </h1>
        	<%= render 'layouts/login' %>
        <% end %>

    </nav>
  </header>

  <main>

    <div class="container">
      <div id="flash">
        <%= render "layouts/flash" %>
      </div>
    <%= yield %>
    </div>
  </main>
    <footer><br>
      <small>
        Copy Right &copy;<span class="fas fa-birthday-cake">Ngano Cake</span>
      </small>
    </footer>
  </body>
</html>