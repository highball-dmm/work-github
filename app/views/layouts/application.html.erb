<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <header>
    <nav>
      <% if administrator_signed_in? %>
        <h1>
          <%= link_to "Nagano CAKE", administrator_customer_top_path, class: "fas fa-birthday-cake" %>
        </h1>
      	<%= render 'layouts/header.admin' %>
      <% else %>
        <h1>
         <%= link_to "Ngano Cake", root_path, class: "fas fa-birthday-cake" %>
        </h1>
      	<%= render 'layouts/login' %>
      <% end %>
    </nav>
  </header>



    <div class="container">
      <div id="flash">
        <%= render "layouts/flash" %>
      </div>
    <%= yield %>
    </div>
  </body>
</html>